        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Id)
            </dd>
            <dt class="col-sm-2">
                @* @Html.DisplayNameFor(model => model.Event.Name) *@
